<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chatactivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    tools:context="com.loosubindhiya.naughtybindhya.chatactivity">


    <android.support.design.widget.TextInputEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chattext_background"
        android:id="@+id/chatBoxText"
        android:layout_margin="5dp"
        android:paddingTop="3dp"
        android:elevation="6dp"
        android:paddingBottom="3dp"
        android:paddingRight="16dp"
        android:paddingLeft="24dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="2000"
        android:maxLines="4"
        android:hint="Type your Message...."
        android:textColorHint="@color/white"
        android:layout_alignStart="@+id/chatListView"
        android:layout_toStartOf="@+id/sendButton" />

    <android.support.v7.widget.AppCompatImageButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/chattext_background"
        android:src="@drawable/sendbutton"
        android:foreground="?attr/selectableItemBackground"
        android:padding="4dp"
        android:id="@+id/sendButton"
        android:backgroundTintMode="multiply"
        android:elevation="6dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/chatBoxText" />

    <android.support.v7.widget.ListViewCompat
        android:layout_width="wrap_content"
        android:layout_height="530dp"
        android:id="@+id/chatListView"
        android:padding="5dp"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/chatBoxText" />


</RelativeLayout>
